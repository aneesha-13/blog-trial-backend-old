<!DOCTYPE html>
<html> 
<head>
   <title>MY APP</title>
   <style>
       .center{
           text-align: center;
       }
   </style>
</head>
<body>
    <br><br>
    <form action="/create" class=center>
        <input type="submit" value="Create Blog" />
    </form>
    <br><br>
    <table class="center" id="dTable" style="width:100%">
        <thead>
            <tr>
                <th style="width: 10%" >AuthorID</th>
                <th style="width: 10%" >Author</th>
                <th style="width: 20%" >Title</th>
                <th style="width: 20%" >Content</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0;i<data.length;i++){ %>
            <tr>
            <td><%= data[i].authorid %></td> 
            <td><%= data[i].author %></td>
            <td><%= data[i].title %></td>
            <td><%= data[i].content %></td>
            <td>
                <a href="/editbutton?authorid=<%= data[i].authorid %>" >Edit</a>
            </td>
            <td>
                <a href="/deletebutton?authorid=<%= data[i].authorid %>" onclick="return confirm('Are you sure to delete?')" >Delete</a>
            </td>
            </tr>
            <% } %>
            
        </tbody>
        </table>
  </body>
  </html>